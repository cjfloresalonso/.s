" workspace-local settings
set exrc
set secure

" line numbers
set nu
set rnu

" file handling
set autoread
set hidden

" tabs
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

" indents
set autoindent
set smarttab
set wrap

" ruler
set colorcolumn=80

" lang
set langmenu=en
set encoding=utf8

" file view
set scrolloff=5
set ruler
set lazyredraw

" code manipulation
set magic
set mat=3
set clipboard=unnamed


" feedback
set noerrorbells  
set novisualbell  
set tm=200
